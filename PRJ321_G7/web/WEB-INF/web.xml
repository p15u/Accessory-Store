<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <session-config>
        <!--For-7-days-->
        <session-timeout>10080</session-timeout>
    </session-config>
    
    <servlet>
        <servlet-name>index.html</servlet-name>
        <jsp-file>/WEB-INF/view/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>index.html</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>login.html</servlet-name>
        <jsp-file>/WEB-INF/view/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>login.html</servlet-name>
        <url-pattern>/login.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>register.html</servlet-name>
        <jsp-file>/WEB-INF/view/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register.html</servlet-name>
        <url-pattern>/register.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>shop.html</servlet-name>
        <jsp-file>/WEB-INF/view/shop.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>shop.html</servlet-name>
        <url-pattern>/shop.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>contact.html</servlet-name>
        <jsp-file>/WEB-INF/view/contact.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>contact.html</servlet-name>
        <url-pattern>/contact.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>product.html</servlet-name>
        <jsp-file>/WEB-INF/view/product.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>product.html</servlet-name>
        <url-pattern>/product.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>manager.html</servlet-name>
        <jsp-file>/WEB-INF/view/manager.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>manager.html</servlet-name>
        <url-pattern>/manager.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>dashboard.html</servlet-name>
        <jsp-file>/WEB-INF/view/dashboard.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard.html</servlet-name>
        <url-pattern>/dashboard.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>orders.html</servlet-name>
        <jsp-file>/WEB-INF/view/orders.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>orders.html</servlet-name>
        <url-pattern>/orders.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>add-product.html</servlet-name>
        <jsp-file>/WEB-INF/view/add-product.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>add-product.html</servlet-name>
        <url-pattern>/add-product.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>shopping-cart.html</servlet-name>
        <jsp-file>/WEB-INF/view/shopping-cart.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>shopping-cart.html</servlet-name>
        <url-pattern>/shopping-cart.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>checkout.html</servlet-name>
        <jsp-file>/WEB-INF/view/checkout.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>checkout.html</servlet-name>
        <url-pattern>/checkout.html</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>profile.html</servlet-name>
        <jsp-file>/WEB-INF/view/profile.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>profile.html</servlet-name>
        <url-pattern>/profile.html</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error/500.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>501</error-code>
        <location>/WEB-INF/error/501.jsp</location>
    </error-page>

</web-app>
